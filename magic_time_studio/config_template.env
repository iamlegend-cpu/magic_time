# Magic Time Studio v2.0.0 - Environment Variables Template
# Kopieer dit bestand naar .env en pas de waarden aan

# =============================================================================
# LIBRETRANSLATE CONFIGURATIE
# =============================================================================

# LibreTranslate Server Configuratie
LIBRETRANSLATE_SERVER=http://100.90.127.78:5000

# Alternatieve LibreTranslate servers (optioneel)
# LIBRETRANSLATE_SERVER=https://libretranslate.com
# LIBRETRANSLATE_SERVER=http://localhost:5000

# API Key voor LibreTranslate (indien vereist)
# LIBRETRANSLATE_API_KEY=your_api_key_here

# Timeout instellingen
LIBRETRANSLATE_TIMEOUT=30

# Rate limiting instellingen
LIBRETRANSLATE_RATE_LIMIT=60

# =============================================================================
# WHISPER CONFIGURATIE
# =============================================================================

# Standaard Whisper model (tiny, base, small, medium, large)
DEFAULT_WHISPER_MODEL=base

# Whisper model cache directory (optioneel)
# WHISPER_CACHE_DIR=/path/to/cache

# Whisper device (cpu, cuda, mps)
WHISPER_DEVICE=cpu

# =============================================================================
# APPLICATIE CONFIGURATIE
# =============================================================================

# Standaard thema (light, dark, blue, green)
DEFAULT_THEME=dark

# Standaard font grootte
DEFAULT_FONT_SIZE=9

# Standaard aantal workers
DEFAULT_WORKER_COUNT=4

# Standaard subtitle type (softcoded, hardcoded)
DEFAULT_SUBTITLE_TYPE=softcoded

# Standaard hardcoded taal (dutch_only, english_only, etc.)
DEFAULT_HARDCODED_LANGUAGE=dutch_only

# =============================================================================
# LOGGING CONFIGURATIE
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log naar bestand (true/false)
LOG_TO_FILE=false

# Log bestand pad
# LOG_FILE_PATH=/path/to/logs/magic_time_studio.log

# =============================================================================
# OUTPUT CONFIGURATIE
# =============================================================================

# Standaard output directory
# DEFAULT_OUTPUT_DIR=/path/to/output

# Automatisch output directory maken (true/false)
AUTO_CREATE_OUTPUT_DIR=true

# =============================================================================
# PERFORMANCE CONFIGURATIE
# =============================================================================

# CPU limiet percentage
CPU_LIMIT_PERCENTAGE=80

# Memory limiet MB
MEMORY_LIMIT_MB=2048

# =============================================================================
# SECURITY CONFIGURATIE
# =============================================================================

# Automatisch temp bestanden opruimen (true/false)
AUTO_CLEANUP_TEMP=true

# Encrypt gevoelige data (true/false)
# ENCRYPT_SENSITIVE_DATA=false

# Encryption key (indien encryptie gebruikt)
# ENCRYPTION_KEY=your_encryption_key_here 